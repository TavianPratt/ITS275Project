		double orderNumber;
		double test = 1;
		double money;
		orderNumber = 5;
		double order3;
		order3 = 3;
		double order4;
		order4 = 10;
		//Tax applied to total (sales tax) 
		final double tax;
		tax = .07;
		//Total output of the items that the person bought from the store.
		double total;
