			item = keyboard.nextInt();

	
		int x;
		
		x=item;
		
		int [] product = {1,2,3,4,};
		int result;
		 result= sequentialSearch(product, x);
		 if (result == -1) {
			 System.out.println("that item is not available");
			 
		 }
		 else {
			 System.out.println("that item is available for purchase");
		 }
	}
	private static int sequentialSearch(int[] product, int i) {
		// TODO Auto-generated method stub
		int index;
		int element;
		boolean found;
		index = 0;
		
		element = -1;
		found = false;
		
		while (!found && index < product.length)
		{
			if (product[index] == i) {
				found = true;
				element = index;
			}
			index ++;
		
		}
			
				return element;
		
		

	
	
		

}
