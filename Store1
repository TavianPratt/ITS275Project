package project;
import java.util.Scanner;


public class Store1 {
	public String name;
	public int price;
	
	public Store1(String name, int price, String discount) {
		this.name = name;
		this.price = price;
	}
	public void speak() {
		System.out.println("store name" + name + "price" + price);
	}
	static double test;
static Scanner keyboard = new Scanner(System.in);
	public static void item() {
		
		double total;
		double bread = 5;
		double money = 20;
		double tax=.07;
		double test;
		test = 10; 
		
		
		System.out.println("testing method working 1");
		while( test != 0) {
			Scanner keyboard = new Scanner(System.in);

			
			System.out.println("enter test number :");
			test = keyboard.nextDouble();
		
			
				if(test == 1 ) {
					total= ((bread * tax)+bread);
					 money = money - total;
					System.out.println("you spent " + total + "and have " + money +"remaining");				
				}
			
			    else {
					break;
			    }
		}
	
	}
	
	public static void flag(){
		System.out.println("please select which item you would like to purchase");
		int item;
		item = keyboard.nextInt();
	
		int x;
		
		x=item;
		
		int [] product = {1,2,3,5};
		int result;
		 result= sequentialSearch(product, x);
		 if (result == -1) {
			 System.out.println("that item is not available");
			 
		 }
		 else {
			 System.out.println("that item is available for purchase");
		 }
	}
	private static int sequentialSearch(int[] product, int i) {
		// TODO Auto-generated method stub
		int index;
		int element;
		boolean found;
		index = 0;
		
		element = -1;
		found = false;
		
		while (!found && index < product.length)
		{
			if (product[index] == i) {
				found = true;
				element = index;
			}
			index ++;
		
		}
			
				return element;
		
	}
}

