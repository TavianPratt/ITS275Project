//Asking which item the person would like to purchase.
//The flag() method checks the item list to make sure the item is available to purchase.

	public static void flag(){
		System.out.println("please select which item you would like to purchase");
		int item;
		item = keyboard.nextInt();
//The item values are listed below and the item values also correspond with each item.
//If the value a person inputs is not within the item list, then the program will tell the person that the item is not available.
//If the value a person inputs is within the item list, then the program will tell the person that the item is available.
	
		int x;
		
		x=item;
		
		int [] product = {1,2,3,5};
		int result;
		 result= sequentialSearch(product, x);
		 if (result == -1) {
			 System.out.println("that item is not available");
			 
		 }
		 else {
			 System.out.println("that item is available for purchase");
		 }
	}
	private static int sequentialSearch(int[] product, int i) {
		// TODO Auto-generated method stub
		int index;
		int element;
		boolean found;
		index = 0;
		
		element = -1;
		found = false;
		
		while (!found && index < product.length)
		{
			if (product[index] == i) {
				found = true;
				element = index;
			}
			index ++;
		
		}
			
				return element;
		
	}
}

